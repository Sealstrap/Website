---
const SEALSTRAP_BLUE = "#3576db";

const {
	title: titleInput,
	description = "An in-development cross-platform bootstrapper for Roblox.",
	lastUpdated,
	noIndex,
} = Astro.props;

const title = titleInput ? `${titleInput} | Sealstrap` : "Sealstrap";
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<link rel="canonical" href={Astro.url.href} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet"
		/>

		<meta name="language" content="en-US" />
		<meta
			name="robots"
			content={noIndex
				? "noindex,nofollow"
				: "follow,index,max-image-preview:large"}
		/>
		<meta name="description" content={description} />
		<meta
			name="keywords"
			content="roblox, roblox launcher, roblox bootstrapper, roblox addon, roblox extension, improve roblox, sealstrap, game launcher, gaming tools, roblox enhancement, cross-platform launcher"
		/>
		{
			lastUpdated ? (
				<meta
					name="last-modified"
					content={new Date(lastUpdated).toUTCString()}
				/>
			) : null
		}

		<meta name="author" content="Julli4n" />
		<meta name="copyright" content="GPL-3.0" />
		<meta name="color-scheme" content="dark" />
		<meta name="theme-color" content={SEALSTRAP_BLUE} />

		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/_static/og-image.png" />
		<meta property="og:site_name" content="Sealstrap" />
		<meta property="og:locale" content="en_US" />

		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:image" content="/_static/og-image.png" />
		<meta name="twitter:site" content="@SealstrapRBLX" />

		<link rel="icon" type="image/x-icon" href="/_static/icon.ico" />
		<link rel="apple-touch-icon" href="/_static/apple-touch-icon.png" />
	</head>
</html>
<body>
	<main>
		<div class="page-content">
			<slot />
		</div>
	</main>
</body>

<style lang="scss">
	:root {
		--background-color: #000;
		--text-color: #fff;
	}

	html {
		font-family: Inter, sans-serif, system-ui;
		background: var(--background-color);
		background-size: 224px;
		color: var(--text-color);

		@media (max-width: 767px) {
			font-size: 14px;
		}
	}

	html,
	body {
		height: 100%;
	}

	body {
		line-height: 1.4;
		margin: 8px;
		position: relative;
		/* min margin-top: 67px, height of nav
		margin-top: 4em;

		@media (max-width: 767px) {
			margin-top: 5em;
		}*/
	}

	main {
		min-height: 100vh;
	}
</style>
